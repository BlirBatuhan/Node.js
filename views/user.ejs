<%- include("partials/_header") %>
<body class="main-layout inner_page">
   <div class="loader_bg">
      <div class="loader"><img src="/images/loading.gif" alt="#"/></div>
   </div>
   <%- include("partials/_menu") %>
   <div class="customers">
      <div class="container">
         <div class="row">
            <div class="col-md-12">
               <div class="titlepage text_align_center">
                  <h2>Welcome <%= user.userName %> </h2>
               </div>
            </div>
         </div>
         <div class="row">
            <div class="col-md-12">
               <div class="satteb text_align_center">
                  <p>Your personalized message here...</p>
                  <h3>The point of using </h3>
                  <i><img src="/images/custo.jpg" alt="#"/></i>
               </div>
            </div>
         </div>
         <div class="row">
            <div class="col-md-12 text_align_center">
               <button data-toggle="modal" data-target=".bd-example-modal-lg" type="button" style="margin-top:100px; margin-left: 50%; transform: translateX(-50%);" class="read_more">Add New Photo</button>
            </div>
         </div>
      </div>
   </div>

   <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="text_align_center">

            <% if (!inFollowers) { %>
              <a style="margin:20px auto;" class="read_more"
                href="/users/<%= user._id %>/follow?_method=PUT">FOLLOW</a>
              <% } else { %>
                <a style="margin:20px auto;" class="read_more"
                  href="/users/<%= user._id %>/unfollow?_method=PUT">UNFOLLOW</a>
                <% } %>
          </div>
        </div>
      </div>
    </div>

   
   <div class="gallery">
      <div class="container_with">
         <div class="row">
            <div class="col-md-12">
               <div class="titlepage text_align_center">
                  <h2>My gallery</h2>
               </div>
            </div>
         </div>
         <div class="tz-gallery">
            <div class="row">
              <% for (photo of photos) { %>
                <div class="col-lg-4 col-md-6 ma_bottom30">
                   <div class="lightbox">
                      <img src="<%= photo.url %>" alt="<%= photo.name %>">
                      <div class="view_main">
                         <div class="pose">
                            <a class="read_more" href="/photos/<%= photo._id %>"><img src="/images/ga.png" alt="#"/></a>
                            <h3 style="padding-top: 10px; padding-bottom: 10px;">
                               <%= photo.name %>
                            </h3>
                            <p style="padding-top: 10px;"><%= photo.description.substring(0, 80) + '...' %></p>
                         </div>
                      </div>
                   </div>
                </div>
             <% } %>
             
            </div>
         </div>
      </div>
   </div>
   <%- include("partials/_footer") %>
   <script src="js/jquery.min.js"></script>
   <script src="js/bootstrap.bundle.min.js"></script>
   <script src="js/jquery-3.0.0.min.js"></script>
   <script src="js/owl.carousel.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
   <script src="js/custom.js"></script>
   <script type="text/javascript">
      baguetteBox.run('.tz-gallery');
   </script>
</body>
</html>
